<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <form class="mx-auto w-50 shadow px-3 py-3" action="/todo/submit" method="post">
        <h1>Todo</h1>
        <div  class="mt-3 form-group">
            <label for="">Title</label>
            <input name="title" class="form-control" type="text">
        </div>
        <div  class="mt-3 form-group">
            <label for="">Content</label>
            <input name="content" class="form-control" type="text">
        </div>
        <button class="btn btn-dark" type="submit">Add Todo</button>
    </form>


    <div>
        <% danger.forEach((todo,index) => { %>
           <p><%= todo.title %></p>
           <p><%= todo.content %></p>
           <form action="/todo/delete/<%= todo._id %>" method="post">
            <button>Delete</button>
           </form>
           <form action="/todo/edit/<%= todo._id %>" method="get">
            <button>Edit</button>
           </form>
        <% }) %>
    </div>
    
</body>
</html>